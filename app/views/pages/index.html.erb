<p id="notice"><%= notice %></p>

<h1>Listing Pages</h1>

<table>
    <thead>
    <tr>
        <th>Title</th>
        <th>Body</th>
    </tr>
    </thead>

    <tbody>
    <% @pages.each do |page| %>
        <tr>
            <td><%= link_to page.title, page %></td>
            <td><%= page.body %></td>
        </tr>
    <% end %>
    </tbody>
</table>